<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.1.xsd
            http://www.springframework.org/schema/mvc
            http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

    <!--开启注解-->
    <context:annotation-config/>

    <!-- 自动扫描(自动注入) -->
    <context:component-scan base-package="com.zhishun.zaotoutiao">
        <context:exclude-filter expression="org.springframework.stereotype.Controller" type="annotation"/>
    </context:component-scan>

    <mvc:annotation-driven/>

    <!-- Dubbo服务 -->
    <import resource="classpath:spring/spring-dubbo-service.xml"/>

    <!-- 插件服务 -->
    <import resource="classpath:spring/spring-common-client.xml"/>

    <!--RabbitMQ服务-->
    <import resource="classpath:spring/spring-rabbitmq.xml"/>

</beans>