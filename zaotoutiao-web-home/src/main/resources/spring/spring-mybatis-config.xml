<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <!-- 打印查询语句 -->
        <setting name="logImpl" value="STDOUT_LOGGING" />
    </settings>

    <!-- mybatis中javaType和jdbcType类型自定义转换器，该转换器用于Money类与数据库中DECIMAL或NUMERIC类型之间转换 -->
    <typeHandlers>
        <typeHandler handler="com.zhishun.zaotoutiao.core.model.common.MoneyTypeHandler" javaType="com.zhishun.zaotoutiao.core.model.common.Money"/>
    </typeHandlers>

    <!-- mapper已经在spring-mybatis.xml中的sqlSessionFactory配置，这里不再需要配置 -->
    <!--     <mappers> -->
    <!--         <mapper resource="com/a/b/c/dao/BusinessInfoDaoMapper.xml" /> -->
    <!--     </mappers> -->
</configuration>